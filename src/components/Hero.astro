---
import { TvMinimalPlay, HardDriveDownload, Server } from '@lucide/astro';
---

<div class="relative min-h-screen w-full overflow-hidden">
    <div class="relative pt-32 pb-20 w-full max-w-6xl mx-auto px-4">
        <div class="text-center mb-20 space-y-6">
            <h1 class="text-6xl md:text-8xl font-bold tracking-tight opacity-0 animate-fade-in-up">
                <span class="bg-gradient-to-r from-purple-400 via-pink-400 to-blue-400 bg-clip-text text-transparent animate-gradient bg-[length:200%_auto]">
                    Tako.gay
                </span>
            </h1>
        </div>
        <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto mb-16">
            <a href="https://watch.tako.gay" class="opacity-0 group relative bg-gradient-to-br from-zinc-900/50 to-zinc-900/30 backdrop-blur-xl border border-white/10 rounded-2xl p-8 hover:border-purple-500/30 transition-all duration-300 overflow-hidden animate-fade-in-up animation-delay-400 hover:scale-[1.01] hover:shadow-xl hover:shadow-purple-500/10">
                <!-- glow effect -->
                <div class="absolute -inset-1 bg-gradient-to-r from-purple-600 to-pink-600 rounded-2xl blur-2xl opacity-0 group-hover:opacity-5 transition-opacity duration-700"></div>
                <!-- gradient overlay -->
                <div class="absolute inset-0 bg-gradient-to-br from-purple-500/0 via-purple-500/0 to-pink-500/0 group-hover:from-purple-500/5 group-hover:via-pink-500/3 group-hover:to-transparent transition-all duration-700 rounded-2xl"></div>
                <div class="relative flex flex-col items-start space-y-6">
                    <div class="relative w-16 h-16 bg-gradient-to-br from-purple-500/20 to-pink-500/20 rounded-xl flex items-center justify-center group-hover:scale-105 transition-all duration-500 ease-out shadow-lg shadow-purple-500/10">
                        <TvMinimalPlay class="w-8 h-8 text-purple-400 group-hover:text-purple-300 transition-colors duration-300" />
                        <div class="absolute inset-0 bg-purple-500/10 rounded-xl blur-lg group-hover:blur-xl transition-all duration-500"></div>
                    </div>
                    <div class="space-y-3">
                        <h2 class="text-3xl font-bold text-white transition-colors duration-300">
                            Jellyfin
                        </h2>
                        <p class="text-zinc-400 group-hover:text-zinc-300 text-base leading-relaxed transition-colors duration-300">
                          Regarder les séries et films téléchargés sur le serveur
                        </p>
                    </div>
                    <div class="flex items-center gap-2 text-purple-400 opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-x-0 group-hover:translate-x-1">
                        <span class="text-sm font-medium">Aller</span>
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                        </svg>
                    </div>
                </div>
            </a>
            <a href="https://dl.tako.gay" class="opacity-0 group relative bg-gradient-to-br from-zinc-900/50 to-zinc-900/30 backdrop-blur-xl border border-white/10 rounded-2xl p-8 hover:border-blue-500/30 transition-all duration-300 overflow-hidden animate-fade-in-up animation-delay-600 hover:scale-[1.01] hover:shadow-xl hover:shadow-blue-500/10">
                <!-- glow effect -->
                <div class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-cyan-600 rounded-2xl blur-2xl opacity-0 group-hover:opacity-5 transition-opacity duration-700"></div>
                <!-- gradient overlay -->
                <div class="absolute inset-0 bg-gradient-to-br from-blue-500/0 via-blue-500/0 to-cyan-500/0 group-hover:from-blue-500/5 group-hover:via-cyan-500/3 group-hover:to-transparent transition-all duration-700 rounded-2xl"></div>
                <div class="relative flex flex-col items-start space-y-6">
                    <div class="relative w-16 h-16 bg-gradient-to-br from-blue-500/20 to-cyan-500/20 rounded-xl flex items-center justify-center group-hover:scale-105 transition-all duration-500 ease-out shadow-lg shadow-blue-500/10">
                        <HardDriveDownload class="w-8 h-8 text-blue-400 group-hover:text-blue-300 transition-colors duration-300" />
                        <div class="absolute inset-0 bg-blue-500/10 rounded-xl blur-lg group-hover:blur-xl transition-all duration-500"></div>
                    </div>
                    <div class="space-y-3">
                        <h2 class="text-3xl font-bold text-white transition-colors duration-300">
                            Jellyseerr
                        </h2>
                        <p class="text-zinc-400 group-hover:text-zinc-300 text-base leading-relaxed transition-colors duration-300">
                          Télécharger n'import quelle série, film ou anime 100% légalement
                        </p>
                    </div>
                    <div class="flex items-center gap-2 text-blue-400 opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-x-0 group-hover:translate-x-1">
                        <span class="text-sm font-medium">Aller</span>
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                        </svg>
                    </div>
                </div>
            </a>
        </div>

        <!-- Server Button -->
        <div class="opacity-0 flex justify-center mb-12 animate-fade-in-up animation-delay-800">
            <a href="https://jellyfin.fairyjeux0.ovh" class="group relative inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r backdrop-blur-xl border bg-gradient-to-br from-zinc-900/50 to-zinc-900/30 border-white/10 rounded-xl hover:border-emerald-500/20 transition-all duration-300 overflow-hidden hover:scale-[1.02] hover:shadow-xl hover:shadow-emerald-500/10">
                <!-- Glow effect -->
                <div class="absolute -inset-1 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-xl blur-xl opacity-0 group-hover:opacity-5 transition-opacity duration-500"></div>
                <!-- Gradient overlay -->
                <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/0 to-teal-500/0 group-hover:from-emerald-500/10 group-hover:to-teal-500/5 transition-all duration-500 rounded-xl"></div>
                <!-- Content -->
                <div class="relative flex items-center gap-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-emerald-500/20 to-teal-500/20 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                        <Server class="w-5 h-5 text-emerald-400" />
                    </div>
                    <div class="flex flex-col items-start">
                        <span class="text-white font-semibold text-lg transition-colors duration-300">Fairy</span>
                        <span class="text-zinc-400 text-sm group-hover:text-zinc-300 transition-colors duration-300">Serveur de FairyGaming</span>
                    </div>
                    <svg class="w-5 h-5 text-emerald-400 group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                </div>
            </a>
        </div>
        <div class="mt-28 opacity-0 text-center animate-fade-in-up animation-delay-1000">
            <div class="inline-flex items-center gap-3 backdrop-blur-sm">
                <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse-soft"></div>
                <p class="text-zinc-500 text-sm">
                    &copy; 2025 Tako.gay
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes gradient {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    @keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(15px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes pulse-soft {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.6;
        }
    }

    .animate-gradient {
        animation: gradient 10s ease infinite;
    }

    .animate-fade-in-up {
        animation: fade-in-up 0.8s ease-out forwards;
    }

    .animate-pulse-soft {
        animation: pulse-soft 3s ease-in-out infinite;
    }

    .animation-delay-400 {
        animation-delay: 200ms;
    }

    .animation-delay-600 {
        animation-delay: 300ms;
    }

    .animation-delay-800 {
        animation-delay: 400ms;
    }

    .animation-delay-1000 {
        animation-delay: 500ms;
    }
</style>
